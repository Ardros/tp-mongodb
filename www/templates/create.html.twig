{% extends "base.html.twig" %}

{% block title %}Création d'un livre{% endblock %}
{% block content %}
<p>&larr;&nbsp;<a href="/index.php">Retourner à la liste</a></p>
<form action="/create.php" method="post">
        <label for="titre">Titre :</label>
        <input type="text" id="titre" name="titre" size="100" required>

        <label for="auteur">Auteur :</label>
        <input type="text" id="auteur" name="auteur" size="50">

        <label for="cote">Cote :</label>
        <input type="text" id="cote" name="cote" size="20">

        <label for="siecle">Siècle :</label>
        <input type="number" id="siecle" name="siecle">

        <button type="submit">Ajouter</button>
</form>
{% endblock %}